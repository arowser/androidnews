<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="vn.evolus.news"
      android:versionCode="1"
      android:versionName="1.0">
    <application 
        android:name="Application"
        android:icon="@drawable/icon" android:label="@string/applicationName">
        <activity android:name=".AndroidNews"
                  android:label="@string/applicationName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChannelActivity" />
        <activity android:name=".ItemActivity" />
        <service android:name=".services.ContentsService" />
        
        <provider android:name=".providers.ImagesProvider"
           android:authorities="vn.evolus.news.images" />
        <provider android:name=".providers.ContentsProvider"
           android:authorities="vn.evolus.news.contents" />           
    </application>    
    <uses-sdk android:minSdkVersion="4" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest> 